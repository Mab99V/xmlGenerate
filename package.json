{
  "name": "appxml",
  "version": "1.0.0",
  "description": "Aplicación para procesar XML",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",  
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["electron", "xml"],
  "author": "mabelperez",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.soga.appxml",
    "productName": "AppXML",
    "copyright": "Copyright © 2024 SOGA",
    "publish": "never",
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"  
    },
    "mac": {
      "target": "dmg"  
    },
    "linux": {
      "target": ["deb", "AppImage"]  
    },
    "directories": {
      "output": "dist"  
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"  
  },
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "xml2js": "^0.6.2"
  }
}